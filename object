    }
    h1{ margin:0; font-size: 18px; font-weight: 800; color: #0f172a; }
    .badge{
      padding: 4px 8px; background: #eff6ff; border-radius: 6px;
      font-size: 12px; font-weight: 700; color: var(--primary);
    }

    .stage {
      flex: 1; width: 100%; position: relative;
      display: flex; align-items: center; justify-content: center;
      background: #eff6ff; /* v14.0 확인용 배경 */
      overflow: hidden;
    }

    svg { width: 100%; height: 100%; overflow: visible; }

    /* 스타일 */
    .comp-box { fill: #ffffff; stroke: var(--stroke-color); stroke-width: 2; rx: 8; transition: all 0.3s; }
    .tank-box { fill: #f8fafc; stroke: #94a3b8; stroke-width: 1.5; rx: 6; transition: all 0.3s; }
    .zone-box { fill: none; stroke: #94a3b8; stroke-width: 1; stroke-dasharray: 4 4; rx: 10; }

    /* 하이라이트 */
    .hl-cold { stroke: var(--cold) !important; stroke-width: 4 !important; filter: drop-shadow(0 0 8px rgba(59,130,246,0.5)); }
    .hl-hot { stroke: var(--hot) !important; stroke-width: 4 !important; filter: drop-shadow(0 0 8px rgba(249,115,22,0.5)); }
    .hl-drain { stroke: var(--drain) !important; stroke-width: 4 !important; filter: drop-shadow(0 0 8px rgba(16,185,129,0.5)); }

    /* 텍스트 */
    .label { fill: #1e293b; font-size: 18px; font-weight: 800; }
    .sublabel { fill: #64748b; font-size: 14px; font-weight: 600; }
    .txt-tank { font-size: 15px; font-weight: 700; fill: #475569; text-anchor: middle; dominant-baseline: middle; }

    /* 배관 */
    .pipe-bg { fill: none; stroke: var(--gray-line); stroke-width: 8; stroke-linecap: round; stroke-linejoin: round; }
    .pipe-active {
      fill: none; stroke-width: 8; stroke-linecap: round; stroke-linejoin: round;
      stroke-dasharray: 12 16; opacity: 0; transition: opacity 0.3s;
    }
    .flow-on { opacity: 1; animation: flowDash 0.6s linear infinite; }
    @keyframes flowDash { from { stroke-dashoffset: 28; } to { stroke-dashoffset: 0; } }
    
    .color-cold { stroke: var(--cold); }
    .color-hot { stroke: var(--hot); }
    .color-drain { stroke: var(--drain); }

    /* [수정된 펌프 스타일] */
    .pump-circle { fill: #ffffff; stroke: #475569; stroke-width: 2.5; }
    .pump-tri { fill: #475569; }
    
    /* 애니메이션 클래스는 이제 내부 그룹(Inner)에만 적용됨 */
    .pump-active .pump-circle { 
      stroke: var(--drain); fill: #ecfdf5; 
      filter: drop-shadow(0 0 8px rgba(16,185,129,0.5)); 
    }
    .pump-active .pump-tri { fill: var(--drain); }
    
    /* 진동: translate(0,0) -> (1,0)으로 움직여도 부모 그룹 좌표(220,480) 내에서 움직임 */
    .pump-active { 
      animation: pumpVib 0.1s linear infinite alternate; 
      transform-box: fill-box; transform-origin: center; 
    }
    @keyframes pumpVib { 
      from { transform: translate(0,0); } 
      to { transform: translate(1px, 0); } 
    }

    .tank-fill { transition: fill 0.5s; }
    .tank-fill.fill-cold { fill: #dbeafe; }
    .tank-fill.fill-hot { fill: #ffedd5; }
    .sump-water { fill: #bbf7d0; transition: height 0.5s, y 0.5s; }

    .bottom-sheet {
      background: var(--glass); backdrop-filter: blur(10px);
      border-top: 1px solid rgba(0,0,0,0.05); border-radius: 20px 20px 0 0;
      box-shadow: var(--shadow); padding: 20px; padding-bottom: max(20px, env(safe-area-inset-bottom));
      display: flex; flex-direction: column; gap: 12px; z-index: 20;
    }
    .step-badge {
      display: inline-block; font-size: 11px; font-weight: 700; color: var(--primary);
      background: #eff6ff; padding: 4px 8px; border-radius: 4px; margin-bottom: 6px;
    }
    .caption-title { font-size: 18px; font-weight: 800; color: #1e293b; margin: 0 0 4px 0; }
    .caption-desc { font-size: 14px; color: #475569; line-height: 1.4; word-break: keep-all; }
    .controls { display: flex; gap: 10px; width: 100%; }
    button {
      flex: 1; background: white; border: 1px solid #cbd5e1; padding: 12px 0;
      border-radius: 12px; cursor: pointer; font-size: 14px; font-weight: 600; color: #475569;
      transition: all 0.2s;
    }
    button:active { background: #f1f5f9; transform: scale(0.98); }
    button.primary { background: var(--primary); color: white; border-color: var(--primary); }

    @media (max-width: 768px) {
      .pipe-bg, .pipe-active { stroke-width: 10px; }
      .label { font-size: 20px; }
    }
